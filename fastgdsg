local player = game.Players.LocalPlayer

local banDuration = 1337
local reason = "Cheating | ID 1337"

local message = string.format(
    "Unfortunately, you've been banned for [%d hours] due to: %s.\nPlease adhere to the rules to avoid future permanent bans.\nvvYou've been banned permanently.",
    banDuration,
    reason
)
player:Kick(message)
